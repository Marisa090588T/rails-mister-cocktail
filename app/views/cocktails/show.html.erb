<div class="container">
  <h1><strong><%= @cocktail.name %></strong></h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Recipe</h2>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Delete?</th>
          </thead>
            <% @cocktail.doses.each do |dose| %>
            <tr>
              <td>Ingredient: <%= dose.ingredient.name  %></td>
              <td>Description :<%= dose.description  %></td>
              <td><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <h3>Add dose</h3>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
  <%= link_to 'GO to top page', root_path %>
</div>
